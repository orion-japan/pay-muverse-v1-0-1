{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "jsx": "react-jsx",
    "incremental": true,
    "noEmit": true,

    "strict": true,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,

    "types": ["node"],
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/ui/*": ["src/ui/*"],
      "@/lib/*": ["src/lib/*"],
      "@lib/*": ["src/lib/*"],
      "@/types/*": ["src/types/*"],
      "types": ["src/types/index.ts"]
    },

    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src",
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "supabase/functions",
    "dist",
    ".next",
    "out",

    /* --- 一時除外（型が原因でビルド停止するものを回避）--- */
    "src/components/mui/useMuiDrop.ts",
    "src/lib/email/**",
    "src/lib/payjp/**",
    "src/lib/qcode/kyomeikai.ts"
  ]
}

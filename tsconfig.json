{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "incremental": true,
    "noEmit": true,

    "strict": true,
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "verbatimModuleSyntax": false,

    "types": ["node"],
    "forceConsistentCasingInFileNames": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"],
      "@/ui/*": ["src/ui/*"],
      "@/lib/*": ["src/lib/*"],
      "@lib/*": ["src/lib/*"],
      "@/types/*": ["src/types/*"]
      // ※ 競合しやすい "types": ["src/types/index.ts"] は削除
    },

    // Supabase などの型シムを置く場合に備え、優先探索先を追加
    "typeRoots": ["./src/types", "./node_modules/@types"],

    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "src",
    "**/*.ts",
    "**/*.tsx"
  ],

  "exclude": [
    "node_modules",
    "supabase/functions",
    "dist",
    ".next",
    "out",

    /* --- 一時除外（型が原因でビルド停止するものを回避）--- */
    "src/components/mui/useMuiDrop.ts",
    "src/lib/email/**",
    "src/lib/payjp/**",
    "src/lib/qcode/kyomeikai.ts"
  ]
}

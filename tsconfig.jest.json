// tsconfig.jest.json
{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "module": "commonjs",
      "types": ["jest", "node"],
      "noEmit": true,
      "baseUrl": "./src",
      "paths": {
        "@/*": ["*"],
        "@lib/*": ["lib/*"],
        "@components/*": ["components/*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"]
  }
  